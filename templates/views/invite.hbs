<div class="container">
	<h1>Invite Us</h1>
</div>
<div class="container">
	<div class="row">
		<div class="col-sm-8 col-md-6">
			{{#if enquirySubmitted}}
			<h3>Thanks for your request to invite.</h3>
			{{else}}
			<form method="post">
				<input type="hidden" name="action" value="invite">
				<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
					<label>Name</label>
					<input type="text" name="name.full"  class="form-control" value="{{formData.[name.full]}}">
				</div>
				<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
					<label>Email</label>
					<input type="email" name="email" class="form-control" value="{{formData.email}}">
				</div>

				<div class="form-actions">
					<button type="submit" class="btn btn-primary">Send</button>
				</div>
			</form>
			{{/if}}
		</div>
	</div>

	<div class="row">
	  <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
	    <article>
	      <hr>
	      <header>
					<h3>Current signups.</h3>
	      </header>
				{{# each data.signups }}
				<div class="false list-group-item">
				 <span class="text-left">
					 <h5>{{ name.first }}</h5>
				 </span>
				 <span class="text-right">
					  <h5>{{ email }}</h5>
			   </span>
			 </div>
				{{/each}}


				<span><h5>{{data.signups._id}}</h5></span>
	    </article>
	  </div>
	</div>

</div>
